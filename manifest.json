{
    "display_information": {
        "name": "Unnanu Talent",
        "description": "Let's find the job you deserve using talent platfrom",
        "background_color": "#000000",
        "long_description": "Connecting outstanding people with the worldâ€™s most innovative companies. Access to Unnanu jobs as well as external job boards like Indeed, LinkedIn, Google, Glassdoor, ZipRecruiter, and X Jobs. Save your favorite job and apply later."
    },
    "features": {
        "app_home": {
            "home_tab_enabled": true,
            "messages_tab_enabled": false,
            "messages_tab_read_only_enabled": false
        },
        "bot_user": {
            "display_name": "Unnanu Talent",
            "always_online": true
        },
        "slash_commands": [
            {
                "command": "/edit-profile",
                "description": "Edit your Unnanu Talent profile easily with this command.profile setup",
                "should_escape": false
            },
            {
                "command": "/jobs-unnanu",
                "description": "Find matching Unnanu jobs tailored to your profile instantly.",
                "should_escape": false
            },
            {
                "command": "/upload-resume",
                "description": "Upload resume to Unnanu Talent for better job matches fast.",
                "should_escape": false
            },
            {
                "command": "/help",
                "description": "Instant help: use buttons to access Unnanu Talent commands easily.",
                "should_escape": false
            },
            {
                "command": "/skills",
                "description": "Update your Unnanu Talent skills to enhance your profile and visibility.",
                "should_escape": false
            }
        ],
        "unfurl_domains": [
            "jobs.unnanu.com"
        ]
    },
    "oauth_config": {
        "redirect_urls": [
            "https://slack-talent-uat.azurewebsites.net/slack/oauth_redirect"
        ],
        "scopes": {
            "user": [
                "chat:write",
                "files:read",
                "im:history",
                "links:write"
            ],
            "bot": [
                "app_mentions:read",
                "channels:history",
                "chat:write",
                "commands",
                "files:read",
                "files:write",
                "im:history",
                "im:read",
                "im:write",
                "links:read",
                "links:write",
                "users.profile:read",
                "users:read",
                "users:read.email"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "user_events": [
                "file_created",
                "message.im"
            ],
            "bot_events": [
                "app_home_opened",
                "app_mention",
                "file_created",
                "file_shared",
                "link_shared",
                "message.channels",
                "message.im"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}